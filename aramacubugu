#subMenu {
  display: none;
  flex-direction: column;
  margin-top: 10px;
}

/* Buton stil */
#subMenu a {
  padding: 12px;
  font-size: 16px;
  text-align: left;
  border: none;
  background-color: #f1f1f1;
  cursor: pointer;
  margin-bottom: 5px;
  text-decoration: none; /* Link alt çizgisini kaldır */
  color: black; /* Link rengi */
  display: flex; /* Flexbox ile resim ve metni yan yana hizala */
  align-items: center; /* Dikeyde ortala */
}

#subMenu a:hover {
  background-color: #ddd;
}

/* Resim stil */
#subMenu a img {
  width: 44px; /* Resim genişliği */
  height: 44px; /* Resim yüksekliği */
