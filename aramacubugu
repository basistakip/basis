<body>

<h2>Search Bar ve Gizli Butonlar</h2>

<!-- Search bar -->
<input type="text" id="searchBar" placeholder="Buton ismi yazın (Örnek: Buton 1)" oninput="filterButtons()">

<!-- Submenü (gizli butonlar) -->
<!-- Butonlar -->
<div id="subMenu">
  <a href="https://www.example.com/buton1" target="_blank">
    <img src="https://i.hizliresim.com/aems1lo.png" alt="Buton 1 Icon"> Binalar
  </a>
  <a href="https://www.example.com/buton2" target="_blank">
    <img src="https://i.hizliresim.com/13ostcw.png" alt="Buton 2 Icon"> Jenerator
  </a>
  <a href="https://www.example.com/buton3" target="_blank">
    <img src="ups.png" alt="Buton 3 Icon"> Buton 3
  </a>
</div>

<script>
function filterButtons() {
  var input, filter, subMenu, links, i, txtValue;
  input = document.getElementById("searchBar");
  filter = input.value.toUpperCase();
  subMenu = document.getElementById("subMenu");
  links = subMenu.getElementsByTagName("a");

  // Search bar boşsa butonları gizle
  if (filter.length === 0) {
    subMenu.style.display = "none";
    return;
  }

  // Butonları filtrele
  for (i = 0; i < links.length; i++) {
    txtValue = links[i].textContent || links[i].innerText;
    if (txtValue.toUpperCase().indexOf(filter) > -1) {
      links[i].style.display = "flex"; /* Flexbox ile hizala */
    } else {
      links[i].style.display = "none";
    }
  }

  // Submenüyü göster
  subMenu.style.display = "flex";
}
</script>

</body>
